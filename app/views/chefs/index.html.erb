<%= render "shared/page_title",title:"Showing all Chefs" %>
<div align="center">
    <% @chef.each do |chef|%>
        <ul class="listing">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4" >
                    <li ><%= link_to gravatar_for(chef), chef_path(chef) %></li>
                    <li class="chef-title">
                        <%= link_to chef.name.capitalize,chef_path(chef) %>
                        <li><small><%= pluralize(chef.recipes.count,"recipe") if chef.recipes %></small></small></li>
                        <li><%= button_to "Delete this chef",chef_path(chef),method: :delete,data:{turbo_confirm: "Are you sure you want to delete the chef and all associated recipes?"} ,class:"btn-danger"%></li>
                    </li>
                </div>
            </div>

        </ul>
    <% end; %>
</div>


