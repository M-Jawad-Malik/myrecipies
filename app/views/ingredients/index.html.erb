<%= render "shared/page_title",title:"Available Ingredients" %>
<div align="center">
    <% @ingredient.each do |ing|%>
        <ul class="listing">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4" >
                    <li class="chef-title">
                        <%= link_to ing.name.capitalize,ingredient_path(ing) %>
                        <li><small><%= pluralize(ing.recipes.count,"recipe") if ing.recipes %></small></small></li>
                        <% if logged_in? && current_chef.admin?  %>
                            <li><%= link_to "Edit this Ingredient",edit_ingredient_path(ing) %></li>
                        <% end %>
                    </li>
                </div>
            </div>

        </ul>
    <% end; %>
</div>


